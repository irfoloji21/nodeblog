<section class="page-image page-image-contact md-padding">
    <h1 class="text-white text-center lang" data-key="CONTACT" >CONTACT / LOCATION</h1>
</section>



<section id="contact" class="md-padding">
	 <div class="container">
		 	<div class="row text-center">
				<div class="col-md-4 offset-md-4">
					<div class="section-header">
						<h2 class="title lang" data-key="LOCATION" >Location</h2>
					</div>
				</div>
			</div>
        <div class="row">
            <div class="col-md-6 d-flex align-items-stretch">
                {{#each contact}}
                <div class="info-wrap w-100 p-3">
                    <h5 class="mb-4 lang" style="font-size: 1.25rem;" data-key="COMPANY_NAME" >ENDÜKİM ENDÜSTRİYEL KİMYA ANONİM ŞİRKETİ</h5>
                    <div class="dbox w-100 d-flex align-items-start">
                        <div class="icon d-flex align-items-center justify-content-center">
                            <span class="fa fa-map-marker"></span>
                        </div>
                        <div class="text pl-4">
                            <p><span class="lang" data-key="ADRESS">Address: </span>{{adres}}</p>
                        </div>
                    </div>
                    <div class="dbox w-100 d-flex align-items-start">
                        <div class="icon d-flex align-items-center justify-content-center">
                            <span class="fa fa-address-card"></span>
                        </div>
                        <div class="text pl-4">
                            <p>
                                <span class="lang" data-key="CONTACT_PERSON">Contact : </span>{{contact_name}}
                                <a href="mailto:{{contact_email}}">{{contact_email}}</a>
							</p>
                        </div>
                    </div>
                    <div class="dbox w-100 d-flex align-items-start">
                        <div class="icon d-flex align-items-center justify-content-center">
                            <span class="fa fa-phone"></span>
                        </div>
                        <div class="text pl-4">
                            <p><span class="lang" data-key="PHONE">Phone:</span> <a href="tel:{{phone}}
                                ">{{phone}}</a></p>
                        </div>
                    </div>
                    <div class="dbox w-100 d-flex align-items-start">
                        <div class="icon d-flex align-items-center justify-content-center">
                            <span class="fa fa-paper-plane"></span>
                        </div>
                        <div class="text pl-4">
                            <p><span  class="lang" data-key="EMAIL">Email:</span> <a href="mailto:{{kurumsal_email}}">{{kurumsal_email}}</a></p>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
            <div class="col-md-6 align-items-center map">
                <div class="mapouter">
                    <div class="gmap_canvas">
                        <iframe width="500" height="550" id="gmap_canvas"
                            src="https://maps.google.com/maps?q=ADALET%20MAH.%20ANADOLU%20CAD.%20MEGAPOL%20TOWER&t=&z=13&ie=UTF8&iwloc=&output=embed"
                            frameborder="0" scrolling="no" marginheight="0" marginwidth="0">
                        </iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
    <!--==========================
