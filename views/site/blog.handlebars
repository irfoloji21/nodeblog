	<!--==========================
    INSIDE HERO SECTION Section
============================-->
	<section class="page-image page-image-blog md-padding">
		<h1 class="text-white text-center">PRODUCTS</h1>
	</section>

	<!--==========================
    Contact Section
============================-->
	<section id="blog" class="md-padding">
		<div class="container">
			<div class="row">
				<!-- Category -->
						{{> site-sidebar}}
					<!-- /Category -->
				<main id="main" class="col-md-8">
					{{#if sessionFlash.message}}
						<div class="{{sessionFlash.type}}">
							{{sessionFlash.message}}
						</div>
					{{/if}}
					<div class="row">
						{{#each posts}}
						<div class="col-md-6">
							<div class="blog">
								<div class="blog-img">
									<img src="{{post_image}}" class="img-fluid">
								</div>
								<div class="blog-content">
									<h3>{{ title }}</h3>
									<p>{{truncate content 150}}</p>
									<a href="posts/{{_id}}">Read More</a>
								</div>
							</div>
						</div>
						{{/each}}
                      
					</div>
				</main>
					
			</div>

		</div>
	</section>