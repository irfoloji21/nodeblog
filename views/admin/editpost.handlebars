<section class="page-image page-image-contact md-padding">
    <h1 class="text-white text-center">EDIT POST</h1>
</section>
    <!--==========================
    Contact Section
============================-->
<section id="contact" class="md-padding">
	<div class="container">

			<div class="row text-center">
				<div class="col-md-4 offset-md-4">
					<div class="section-header">
						<h2 class="title">EDIT POST</h2>
					</div>
				</div>
			</div>

		<div class="row">
			<div class="col-lg-12">
				<form action="/admin/posts/{{post._id}}?_method=PUT" method="POST" enctype="multipart/form-data">
                <input type="hidden" name="_method" value="PUT">
					<div class="row">
						<div class="offset-2 col-md-8">
                            <div class="form-group">
								<input class="form-control" name="title" type="text" value="{{post.title}}" required="required" data-validation-required-message="Please enter the title of the new post.">
								<p class="help-block text-danger"></p>
							</div>
							<div class="form-group">
								<textarea class="form-control" name="content" required="required" data-validation-required-message="Please enter the content of the new post.">{{post.content}}</textarea>
								<p class="help-block text-danger"></p>
							</div>
							<div class="form-group">
								<select class="form-control" name="category">
									{{#each categories}}
									 <option value="{{_id}}">{{name}}</option>
									{{/each}}
								</select>
							</div>
							<div class="form-group">
								<input class="form-control" name="post_image" type="file" required="required" data-validation-required-message="Please upload an image.">
								<p class="help-block text-danger"></p>
							</div>
						</div>
					
						<div class="clearfix"></div>
						<div class="col-lg-12 text-center">
							<div id="success"></div>
							<button class="main-btn" type="submit">Edit Post</button>
						</div>
					</div>
				</form>
			</div>
		</div>

	</div>
</section>
