<!--==========================
    INSIDE HERO SECTION Section
============================-->
<section class="page-image page-image-about md-padding">
	<h1 class="text-white text-center">LOCATION / CONTACT</h1>
</section>

<!--==========================
    ABOUTUS Section
============================-->
<section id="aboutus" class="md-padding">
	<div class="container">
		{{> admin-nav}}
		<div class="clearfix"></div>
		<div class="mb-5"></div>
		<div class="row">
			<div class="col-md-12">

				<div class="row text-center">
					<div class="col-md-4 offset-md-4">
						<div class="section-header">
							<h2 class="title">Location / Contact</h2>
						</div>
					</div>
				</div>

				<div class="row">
					<div class="col-lg-9">
						<form action="/admin/contact/{{contact._id}}?_method=PUT" method="POST" enctype="multipart/form-data">
							<div class="row">
								<div class="offset-2 col-md-12">
									<div class="form-group">
										<span>Contact Name</span>
										<input class="form-control" name="contact_name" type="text"
										value="{{contact.contact_name}}"
											placeholder="Contact Name *" required="required"
											data-validation-required-message="Please enter the Contact Name.">
										<p class="help-block text-danger"></p>
									</div>
									<div class="form-group">
										<span>Personal Email</span>
										<input class="form-control" name="contact_email" type="text"
										value="{{contact.contact_email}}"
											placeholder="Contact Email *" required="required"
											data-validation-required-message="Please enter the Contact Email.">
										<p class="help-block text-danger"></p>
									</div>
									<div class="form-group">
										<span>Business Email</span>
										<input class="form-control" name="kurumsal_email" type="text"
										value="{{contact.kurumsal_email}}"
											placeholder="Business Email *" required="required"
											data-validation-required-message="Please enter the Business Email .">
										<p class="help-block text-danger"></p>
									</div>
									<div class="form-group">
										<span>Phone Number</span>
										<input class="form-control" name="phone" type="text"
										value="{{contact.phone}}"
											placeholder="Phone Number *" required="required"
											data-validation-required-message="Please enter the Phone Number .">
										<p class="help-block text-danger"></p>
									</div>
									<div class="form-group">
										<span>Adress</span>
										<textarea class="form-control" name="adres" placeholder="Adress *"
											style="min-height: 250px;" required="required"
											data-validation-required-message="Please enter the adress.">{{contact.adres}}</textarea>
										<p class="help-block text-danger"></p>
									</div>
								</div>

								<div class="clearfix"></div>
								<div class="col-lg-12 text-center">
									<div id="success"></div>
									<button class="main-btn" type="submit">Save</button>
								</div>
							</div>
						</form>
					</div>
				</div>

			</div>

		</div>
	</div>
</section>