<!--==========================
    INSIDE HERO SECTION Section
============================-->
<section class="page-image page-image-about md-padding">
	<h1 class="text-white text-center">CATEGORIES</h1>
</section>

<!--==========================
    ABOUTUS Section
============================-->
<section id="aboutus" class="md-padding">
	<div class="container">
		{{> admin-nav}}
	<div class="clearfix"></div>
	<div class="mb-5"></div>
		<div class="row">
			<div class="col-md-4">
				<form action="/categories/test" method="POST" enctype="multipart/form-data">
					<div class="row">
						<div class="col-md-10">
							<div class="form-group">
								<span>Türkçe İsim</span>
								<input class="form-control" name="name_tr" type="text" placeholder="Türkçe İsim *"
									required="required"
									data-validation-required-message="Lütfen kategori ismi giriniz.">
								<p class="help-block text-danger"></p>
							</div>
							<div class="form-group">
								<span>İngilizce İsim</span>
								<input class="form-control" name="name_en" type="text" placeholder="İngilizce İsim *"
									required="required"
									data-validation-required-message="Lütfen kategori ismi giriniz.">
								<p class="help-block text-danger"></p>
							</div>
								<div class="form-group">
								<span>Arapça İsim</span>
								<input class="form-control" name="name_ar" type="text" placeholder="Arapça İsim *"
									required="required"
									data-validation-required-message="Lütfen kategori ismi giriniz.">
								<p class="help-block text-danger"></p>
							</div>
						</div>

						<div class="clearfix"></div>
						<div class="col-lg-12">
							<div id="success"></div>
							<button class="main-btn" style="margin-left: 0;" type="submit">Kaydet</button>
						</div>
					</div>
				</form>
			</div>
			<div class="col-md-8">
				<table class="table">
					<thead>
						<tr>
							<th>Türkçe İsim</th>
							<th>İngilizce İsim</th>
							<th>Arapça İsim</th>
							<th>Düzenle</th>
							<th>Sil</th>
						</tr>
					</thead>
					<tbody>
						{{#each categories}}
						<tr>
							<td>{{name_tr}}</td>
							<td>{{name_en}}</td>
							<td>{{name_ar}}</td>
							<td>
								<a class="btn btn-warning" href="/admin/categories/edit/{{_id}}">Düzenle</a>
							</td>
							<td>

								<form action="/admin/categories/{{_id}}?_method=DELETE" method="POST">
									<input type="hidden" name="_method" value="DELETE">
									<button type="submit" class="btn btn-danger">Sil</button>
								</form>

							</td>
						</tr>
						{{/each}}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</section>